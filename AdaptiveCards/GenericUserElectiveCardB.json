{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Hi ${name},",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "this is a generic UserElecive's **second** Adaptive Card.",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "In the previous step, you have input the following number: ${input}.",
      "wrap": true
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Finish",
          "id": "submit"
        }
      ]
    }
  ]
}